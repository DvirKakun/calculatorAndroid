<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrounddesign"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/backgrounddesign"
            >

            <TextView
                android:id="@+id/textViewSubResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text=""
                android:textColor="#767676"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="70sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonCE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="clearEnrtyFunc"
                android:text="CE"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="clear"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/buttonErase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:contentDescription="Erase"
                android:onClick="deleteFunc"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_input_delete" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="operationFunc"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/numberSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="operationFunc"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/numberFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="operationFunc"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/numberOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/numberThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="operationFunc"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/numberZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="numFunc"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/buttonResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/operations_buttons_ripple"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="resultFunc"
                android:text="="
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>